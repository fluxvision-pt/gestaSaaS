# Configurações da Aplicação
NODE_ENV=production
APP_PORT=3001

# Banco de Dados PostgreSQL (local)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_DATABASE=gestasaas

# JWT
JWT_SECRET=desenvolvimento_jwt_secret_key_muito_segura_123456789
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS - Permitindo frontend local e produção
ALLOWLIST_ORIGINS=https://app.fluxvision.cloud,http://localhost:3001,http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Criptografia
ENCRYPTION_KEY=chave_para_criptografar_credenciais_gateway_dev

# Logs
LOG_LEVEL=info

# Email (para recuperação de senha)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app
SMTP_FROM=noreply@exemplo.com

# URLs
FRONTEND_URL=https://app.fluxvision.cloud
BACKEND_URL=https://app.fluxvision.cloud

# Super Admin (para seeds)
SUPER_ADMIN_EMAIL=admin@exemplo.com
SUPER_ADMIN_PASSWORD=ChangeMe@123
