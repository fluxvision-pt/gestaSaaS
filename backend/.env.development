# Configurações de desenvolvimento local
NODE_ENV=development
APP_PORT=3001

# Database SQLite local para desenvolvimento
DB_TYPE=sqlite
DB_DATABASE=./database/gestasaas.db

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production-2024
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-here-2024
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS
ALLOWLIST_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-in-production

# Logging
LOG_LEVEL=debug

# SMTP Email Settings (desenvolvimento)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@localhost

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
BASE_URL=http://localhost:3001