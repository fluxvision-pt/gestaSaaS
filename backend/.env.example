# Configurações da Aplicação
NODE_ENV=production
APP_PORT=8080

# Banco de Dados PostgreSQL
DATABASE_URL=postgres://usuario:senha@host:5432/gesta
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=senha
DATABASE_NAME=gesta

# JWT
JWT_SECRET=troque_este_valor_por_um_hash_seguro
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
ALLOWLIST_ORIGINS=https://app.seudominio.com,http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Criptografia
ENCRYPTION_KEY=chave_para_criptografar_credenciais_gateway

# Logs
LOG_LEVEL=info

# Email (para recuperação de senha)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app
SMTP_FROM=noreply@gestasaas.com

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080